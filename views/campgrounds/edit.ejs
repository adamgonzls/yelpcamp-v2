<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit <%= campground.name %></h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="mt-3">
        <label for="name" class="form-label">Campground Name:</label>
        <input
          class="form-control"
          id="name"
          type="text"
          placeholder="Red Rock Retreat"
          name="campground[name]"
          value="<%= campground.name %>"
        />
      </div>
      <div class="mt-3">
        <label for="price" class="form-label">Price/Night:</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">&#36;</span>
          <input
            id="price"
            type="number"
            class="form-control"
            placeholder="150"
            aria-label="Price"
            aria-describedby="price-label"
            name="campground[price]"
            min="0.00"
            value="<%= campground.price %>"
          />
        </div>
      </div>
      <div class="mt-3">
        <label for="location" class="form-label">Location:</label>
        <input
          class="form-control"
          id="location"
          type="text"
          placeholder="Sedona, Arizona"
          name="campground[location]"
          value="<%= campground.location %>"
        />
      </div>
      <div class="mt-3">
        <label for="description" class="form-label">Description:</label>
        <input
          class="form-control"
          id="description"
          type="text"
          placeholder="The amazing rocks had me mesmerized..."
          name="campground[description]"
          value="<%= campground.description %>"
        />
      </div>
      <button class="btn btn-success mt-3">Update Campground</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to Details Page</a>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
