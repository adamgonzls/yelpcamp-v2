<% layout('layouts/boilerplate') %>

<h1>Edit <%= campground.name %></h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div>
    <label for="name">Name:</label>
    <input
      id="name"
      type="text"
      placeholder="Red Rock Retreat"
      name="campground[name]"
      value="<%= campground.name %>"
    />
  </div>
  <div>
    <label for="price">Price:</label>
    <input
      id="price"
      type="text"
      placeholder="150"
      name="campground[price]"
      value="<%= campground.price %>"
    />
  </div>
  <div>
    <label for="location">Location:</label>
    <input
      id="location"
      type="text"
      placeholder="Sedona, Arizona"
      name="campground[location]"
      value="<%= campground.location %>"
    />
  </div>
  <div>
    <label for="description">Description:</label>
    <input
      id="description"
      type="text"
      placeholder="The amazing rocks had me mesmerized..."
      name="campground[description]"
      value="<%= campground.description %>"
    />
  </div>
  <button>Update Campground</button>
</form>

<a href="/campgrounds">All campgrounds</a>
